<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background ="#b5b6b6" />

    <TextView
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/layout1" />

    <TextView
        android:id="@+id/view_large"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/layout2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/view_large2"
        android:layout_width="380dp"
        android:layout_height="38dp"
        android:layout_alignBaseline="@+id/view_large"
        android:layout_alignBottom="@+id/view_large"
        android:layout_toRightOf="@+id/view_large"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/view_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view_large"
        android:layout_marginTop="110dp"
        android:text="Small Text"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/view_small2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_large"
        android:layout_toRightOf="@+id/view_large"
        android:layout_marginTop="6dp"
        android:text="Small Text"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/view_medium"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />
    
</RelativeLayout>