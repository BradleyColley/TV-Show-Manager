<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/view_large"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="36dp"
        android:text="Large Text"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#8f8d8d" />

    <TextView
        android:id="@+id/view_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_large"
        android:layout_alignTop="@+id/view_large"
        android:layout_marginTop="50dp"
        android:textSize="12sp"
        android:text="Small Text"
        android:textColor="#8f8d8d" />

    <TextView
        android:id="@+id/view_small2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_large"
        android:layout_below="@+id/view_small"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:text="Small Text"
        android:textColor="#8f8d8d" />

    <TextView
        android:id="@+id/view_medium2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_large"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="13dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#8f8d8d" />

    <TextView
        android:id="@+id/view_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_small"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#8f8d8d" />
    
</RelativeLayout>