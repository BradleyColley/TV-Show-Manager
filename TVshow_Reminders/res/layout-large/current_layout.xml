<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/view_large"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:text="Large Text"
        android:textSize="40sp" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#8f8d8d" />

    <TextView
        android:id="@+id/view_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_medium2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:text="Reminder time: "
        android:textColor="#8f8d8d" />

    <TextView
        android:id="@+id/view_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_large"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#8f8d8d" />

    <TextView
        android:id="@+id/view_medium2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_medium"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#8f8d8d" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  	    android:layout_below="@+id/view_small"
  	    android:layout_marginLeft="120dp"
        android:layout_marginTop="-20dp"
        android:text="Time"
        android:textColor="#8f8d8d" />
    
</RelativeLayout>